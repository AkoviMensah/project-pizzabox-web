@model PizzaBox.Client.Models.CustomerViewModel

<div style="">
  <form action="start" method="post">
    @Html.AntiForgeryToken()


    <fieldset>
      <legend>Customers</legend>

      @Html.ValidationMessageFor(m => m.SelectedCustomer)

      @foreach (var item in Model.Customers)
      {
        <div class="form-check">
          <input class="form-check-input" type="radio" asp-for="SelectedCustomer" value="@item">
          <label class="form-check-label" for="@item">@item</label>
        </div>
      }
    </fieldset>

    <fieldset>
      <legend>Stores</legend>

      @Html.ValidationMessageFor(m => m.SelectedStore)

      @foreach (var item in Model.Stores)
      {
        <div class="form-check">
          <input class="form-check-input" type="radio" asp-for="SelectedStore" value="@item">
          <label class="form-check-label" for="@item">@item</label>
        </div>
      }
    </fieldset>




    <button type="submit">Start Order</button>
  </form>
</div>
